{
  "name": "@shelf/jest-dynamodb",
  "version": "1.0.2",
  "description": "Run your tests using Jest & DynamoDB local",
  "license": "MIT",
  "repository": "shelfio/jest-dynamodb",
  "author": {
    "name": "Vlad Holubiev",
    "email": "vlad@shelf.io",
    "url": "shelf.io"
  },
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "coverage": "jest --coverage",
    "lint": "eslint . --fix",
    "test": "export ENVIRONMENT=local && jest . --runInBand"
  },
  "files": [
    "environment.js",
    "jest-preset.js",
    "setup.js",
    "teardown.js"
  ],
  "main": "src/index.js",
  "keywords": [
    "jest",
    "dynamodb",
    "dynamodb local",
    "jest preset",
    "jest environment"
  ],
  "dependencies": {
    "aws-sdk": "2.437.0",
    "cwd": "0.10.0",
    "dynamodb-local": "0.0.25"
  },
  "devDependencies": {
    "@shelf/eslint-config": "0.2.2",
    "eslint": "5.16.0",
    "husky": "1.3.1",
    "jest": "24.7.1",
    "lint-staged": "8.1.5",
    "prettier": "1.17.0"
  },
  "jest": {
    "preset": "./jest-preset.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{html,json,md,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
